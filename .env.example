# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name
PRODUCTION_DATABASE_URL=postgresql://username:password@hostname:port/production_database_name
PGDATABASE=beer_control_db
PGHOST=localhost
PGPASSWORD=your_password
PGPORT=5432
PGUSER=your_username

# Replit Authentication (required for user login)
# These are automatically provided by Replit in production
REPL_ID=your_repl_id
REPLIT_DOMAINS=your-repl-name.replit.dev
ISSUER_URL=https://replit.com/oidc
SESSION_SECRET=your_very_secure_session_secret_at_least_32_characters_long

# Application Configuration
NODE_ENV=development
PORT=5000

# Timezone Configuration (SÃ£o Paulo timezone)
TZ=America/Sao_Paulo

# Hardware Integration Settings
# Default keg capacity in milliliters (30L = 30000ml)
DEFAULT_KEG_CAPACITY_ML=30000

# Webhook Security (optional - for production security)
# WEBHOOK_SECRET=your_webhook_verification_secret

# Real-time Updates Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30000
DASHBOARD_UPDATE_INTERVAL=5000

# CSV Export Configuration
CSV_EXPORT_LIMIT=10000
CSV_FILENAME_PREFIX=historico_consumo

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# CORS Configuration (if needed for external integrations)
# CORS_ORIGIN=https://your-monitoring-frontend.com

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for future notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@your-brewery.com

# Backup Configuration (for future data backup)
# BACKUP_ENABLED=true
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30

# Monitoring and Analytics (for future integrations)
# ANALYTICS_ENABLED=false
# SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Feature Flags (for future feature toggles)
ENABLE_WEBSOCKET=true
ENABLE_CSV_EXPORT=true
ENABLE_REAL_TIME_DASHBOARD=true
ENABLE_KEG_CHANGE_TRACKING=true
ENABLE_POUR_EVENT_TRACKING=true

# Development Settings (only for development environment)
# DEBUG_WEBHOOKS=true
# MOCK_HARDWARE_DATA=false
# SIMULATE_POUR_EVENTS=false
